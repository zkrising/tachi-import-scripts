{
	"name": "tachi-import-scripts",
	"version": "1.1.0",
	"description": "Scripts for importing local files to Tachi.",
	"main": "dist/main.js",
	"scripts": {
		"build": "tsc --project tsconfig.node.json && rollup -c",
		"dev": "tsc --project tsconfig.node.json && rollup -c -w",
		"start": "yarn run build && electron .",
		"pack": "electron-builder --dir",
		"predist": "yarn build",
		"dist": "electron-builder",
		"postdist": "electron-builder install-app-deps"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tng-dev/tachi-import-scripts.git"
	},
	"keywords": [
		"kamaitachi",
		"bokutachi",
		"tachi",
		"rhythm-game",
		"electron",
		"scripts"
	],
	"author": "zkldi",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/tng-dev/tachi-import-scripts/issues"
	},
	"homepage": "https://github.com/tng-dev/tachi-import-scripts#readme",
	"dependencies": {
		"@rollup/plugin-commonjs": "^21.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0.5",
		"@rollup/plugin-typescript": "^8.2.5",
		"@tsconfig/svelte": "^2.0.1",
		"@types/better-sqlite3": "7.4.0",
		"@types/express-serve-static-core": "^4.17.24",
		"@types/node-fetch": "2",
		"@types/react": "^17.0.27",
		"better-sqlite3": "^7.4.4",
		"bson": "^4.5.2",
		"deepmerge": "^4.2.2",
		"mei-logger": "1.0.1",
		"node-fetch": "2",
		"prudence": "^0.9.6",
		"rollup": "^2.58.0",
		"rollup-plugin-polyfill-node": "^0.7.0",
		"rollup-plugin-svelte": "^7.1.0",
		"rollup-plugin-terser": "^7.0.2",
		"svelte": "^3.43.1",
		"svelte-preprocess": "^4.9.8",
		"tachi-common": "^0.3.8",
		"winston": "^3.3.3",
		"winston-transport": "^4.4.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"electron": "15",
		"electron-builder": "^22.13.1",
		"electron-rebuild": "^3.2.3",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.4.1",
		"typescript": "^4.4.3"
	},
	"build": {
		"appId": "xyz.zkldi.tis",
		"files": [
			"dist/**/*",
			"pages/**/*",
			"package.json"
		],
		"directories": {
			"output": "out"
		},
		"linux": {
			"target": "AppImage",
			"category": "Utility"
		}
	}
}
